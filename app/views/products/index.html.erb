<h1>Listing products</h1>

<table>
  <tr>
    <th>商品コード</th>
    <th>商品名称</th>
    <th>説明</th>
    <th>カバー画像UID</th>
    <th>カバー画像名称</th>
    <th>Detail image uid</th>
    <th>Detail image name</th>
    <th>価格</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.code %></td>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= image_tag( product.cover_image.url,
               {:size => '140x160', :alt => product.cover_image_name} ) %></td>

    <td><%= product.cover_image_uid %></td>
    <td><%= product.cover_image_name %></td>
    <td><%= product.detail_image_uid %></td>
    <td><%= product.detail_image_name %></td>
    <td><%= product.price %></td
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

