<div class="cart-title">カート</div>
<table>
  <%= render(:partial => "cart_item", :collection => cart.items) %>  
  
  <tr class="total-line">
    <td colspan="2">合計</td>
    <td class="total-cell"><%= number_to_currency(cart.total_price, :unit=>"円", :precision=>0, :format=>"%n%u") %></td>
  </tr>

</table>
  
<!-- START_HIGHLIGHT -->
<%= button_to "購入画面へ", :action => 'checkout' %>
<!-- END_HIGHLIGHT -->
<%= button_to "カートを空にする", :action => :empty_cart %>
